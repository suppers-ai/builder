{
  "metadata": {
    "name": "simple-app",
    "version": "1.0.0",
    "description": "A simple application example with basic components and routes",
    "author": "JSON App Compiler",
    "license": "MIT"
  },
  "components": [
    {
      "id": "header",
      "type": "Layout",
      "props": {
        "variant": "default",
        "padding": "md",
        "backgroundColor": "#f9fafb"
      },
      "children": [
        {
          "id": "headerContent",
          "type": "Card",
          "props": {
            "variant": "default",
            "padding": "md",
            "shadow": "sm",
            "title": "Simple App"
          },
          "children": [
            {
              "id": "headerNav",
              "type": "Layout",
              "props": {
                "variant": "default",
                "padding": "none"
              },
              "children": [
                {
                  "id": "homeButton",
                  "type": "Button",
                  "props": {
                    "variant": "ghost",
                    "size": "sm"
                  },
                  "children": "Home"
                },
                {
                  "id": "aboutButton",
                  "type": "Button",
                  "props": {
                    "variant": "ghost",
                    "size": "sm"
                  },
                  "children": "About"
                }
              ]
            }
          ]
        }
      ]
    },
    {
      "id": "homeContent",
      "type": "Layout",
      "props": {
        "variant": "default",
        "maxWidth": "lg",
        "padding": "lg"
      },
      "children": [
        {
          "id": "welcomeCard",
          "type": "Card",
          "props": {
            "variant": "default",
            "padding": "lg",
            "shadow": "md",
            "title": "Welcome to Simple App",
            "subtitle": "This is a simple example application"
          },
          "children": [
            {
              "id": "welcomeText",
              "type": "Layout",
              "props": {
                "variant": "default",
                "padding": "md"
              },
              "children": "This is a simple application built with JSON App Compiler. It demonstrates basic components and routing capabilities."
            },
            {
              "id": "counterSection",
              "type": "Layout",
              "props": {
                "variant": "default",
                "padding": "md"
              },
              "children": [
                {
                  "id": "counterButton",
                  "type": "Button",
                  "props": {
                    "variant": "primary",
                    "size": "md"
                  },
                  "children": "Increment Counter"
                }
              ]
            }
          ]
        }
      ]
    },
    {
      "id": "aboutContent",
      "type": "Layout",
      "props": {
        "variant": "default",
        "maxWidth": "lg",
        "padding": "lg"
      },
      "children": [
        {
          "id": "aboutCard",
          "type": "Card",
          "props": {
            "variant": "default",
            "padding": "lg",
            "shadow": "md",
            "title": "About Simple App",
            "subtitle": "Learn more about this application"
          },
          "children": "This application was generated using JSON App Compiler, a tool that transforms JSON configurations into fully functional Fresh 2.0 applications."
        }
      ]
    },
    {
      "id": "contactForm",
      "type": "Layout",
      "props": {
        "variant": "default",
        "maxWidth": "md",
        "padding": "lg"
      },
      "children": [
        {
          "id": "contactCard",
          "type": "Card",
          "props": {
            "variant": "default",
            "padding": "lg",
            "shadow": "md",
            "title": "Contact Us",
            "subtitle": "Send us a message"
          },
          "children": [
            {
              "id": "nameInput",
              "type": "Input",
              "props": {
                "type": "text",
                "label": "Name",
                "placeholder": "Enter your name",
                "fullWidth": true,
                "required": true
              }
            },
            {
              "id": "emailInput",
              "type": "Input",
              "props": {
                "type": "email",
                "label": "Email",
                "placeholder": "Enter your email",
                "fullWidth": true,
                "required": true
              }
            },
            {
              "id": "messageInput",
              "type": "Input",
              "props": {
                "type": "text",
                "label": "Message",
                "placeholder": "Enter your message",
                "fullWidth": true,
                "required": true
              }
            },
            {
              "id": "submitButton",
              "type": "Button",
              "props": {
                "variant": "primary",
                "size": "md",
                "type": "submit",
                "fullWidth": true
              },
              "children": "Submit"
            }
          ]
        }
      ]
    }
  ],
  "routes": [
    {
      "path": "/",
      "component": "homeContent",
      "layout": "header",
      "meta": {
        "title": "Home | Simple App",
        "description": "Welcome to the Simple App home page"
      }
    },
    {
      "path": "/about",
      "component": "aboutContent",
      "layout": "header",
      "meta": {
        "title": "About | Simple App",
        "description": "Learn more about Simple App"
      }
    },
    {
      "path": "/contact",
      "component": "contactForm",
      "layout": "header",
      "meta": {
        "title": "Contact | Simple App",
        "description": "Contact the Simple App team"
      }
    }
  ],
  "api": {
    "endpoints": [
      {
        "path": "/api/hello",
        "methods": ["GET"],
        "handler": "HelloHandler"
      }
    ]
  },
  "theme": {
    "primaryColor": "#3b82f6",
    "secondaryColor": "#64748b",
    "fontFamily": "system-ui, sans-serif",
    "spacing": {
      "xs": "0.5rem",
      "sm": "1rem",
      "md": "1.5rem",
      "lg": "2rem",
      "xl": "3rem"
    }
  },
  "build": {
    "target": "development",
    "minify": false,
    "sourceMaps": true
  }
}