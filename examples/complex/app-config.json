  "routes": [
    {
      "path": "/",
      "component": "homePage",
      "layout": "mainLayout",
      "middleware": ["logRequest"],
      "meta": {
        "title": "Home | Complex App",
        "description": "Welcome to the Complex App home page"
      }
    },
    {
      "path": "/dashboard",
      "component": "dashboardPage",
      "layout": "dashboardLayout",
      "middleware": ["logRequest", "requireAuth"],
      "meta": {
        "title": "Dashboard | Complex App",
        "description": "Your personal dashboard",
        "requiresAuth": true
      }
    },
    {
      "path": "/login",
      "component": "loginForm",
      "middleware": ["logRequest", "guestOnly"],
      "meta": {
        "title": "Login | Complex App",
        "description": "Sign in to your account"
      }
    }
  ],
  "api": {
    "endpoints": [
      {
        "path": "/api/users",
        "methods": ["GET", "POST"],
        "handler": "UserHandler",
        "middleware": ["validateRequest"],
        "validation": {
          "body": {
            "name": {
              "type": "string",
              "required": true,
              "min": 2,
              "max": 50
            },
            "email": {
              "type": "string",
              "required": true,
              "pattern": "^[\\w-\\.]+@([\\w-]+\\.)+[\\w-]{2,4}$"
            },
            "age": {
              "type": "number",
              "required": false,
              "min": 18
            }
          }
        },
        "auth": {
          "required": true,
          "roles": ["admin"]
        }
      },
      {
        "path": "/api/users/:id",
        "methods": ["GET", "PUT", "DELETE"],
        "handler": "UserDetailHandler",
        "middleware": ["validateRequest"],
        "validation": {
          "params": {
            "id": {
              "type": "string",
              "required": true,
              "pattern": "^[0-9a-fA-F]{24}$"
            }
          }
        },
        "auth": {
          "required": true,
          "roles": ["admin", "user"]
        }
      },
      {
        "path": "/api/auth/login",
        "methods": ["POST"],
        "handler": "AuthLoginHandler",
        "middleware": ["validateRequest"],
        "validation": {
          "body": {
            "email": {
              "type": "string",
              "required": true,
              "pattern": "^[\\w-\\.]+@([\\w-]+\\.)+[\\w-]{2,4}$"
            },
            "password": {
              "type": "string",
              "required": true,
              "min": 8
            }
          }
        }
      },
      {
        "path": "/api/auth/register",
        "methods": ["POST"],
        "handler": "AuthRegisterHandler",
        "middleware": ["validateRequest"],
        "validation": {
          "body": {
            "name": {
              "type": "string",
              "required": true,
              "min": 2,
              "max": 50
            },
            "email": {
              "type": "string",
              "required": true,
              "pattern": "^[\\w-\\.]+@([\\w-]+\\.)+[\\w-]{2,4}$"
            },
            "password": {
              "type": "string",
              "required": true,
              "min": 8
            },
            "confirmPassword": {
              "type": "string",
              "required": true,
              "min": 8
            }
          }
        }
      }
    ],
    "middleware": [
      {
        "name": "logRequest",
        "config": {
          "level": "info"
        },
        "order": 0
      },
      {
        "name": "validateRequest",
        "order": 1
      },
      {
        "name": "requireAuth",
        "config": {
          "redirectTo": "/login"
        },
        "order": 2
      },
      {
        "name": "guestOnly",
        "config": {
          "redirectTo": "/dashboard"
        },
        "order": 2
      }
    ],
    "auth": {
      "provider": "jwt",
      "config": {
        "secret": "your-secret-key",
        "expiresIn": "1d"
      },
      "routes": {
        "login": "/api/auth/login",
        "logout": "/api/auth/logout",
        "register": "/api/auth/register"
      }
    },
    "cors": {
      "origin": true,
      "methods": ["GET", "POST", "PUT", "DELETE"],
      "allowedHeaders": ["Content-Type", "Authorization"],
      "credentials": true
    }
  },
  "theme": {
    "primaryColor": "#3b82f6",
    "secondaryColor": "#64748b",
    "fontFamily": "Inter, system-ui, sans-serif",
    "spacing": {
      "xs": "0.5rem",
      "sm": "1rem",
      "md": "1.5rem",
      "lg": "2rem",
      "xl": "3rem"
    },
    "breakpoints": {
      "sm": "640px",
      "md": "768px",
      "lg": "1024px",
      "xl": "1280px",
      "2xl": "1536px"
    },
    "customProperties": {
      "--card-border-radius": "0.5rem",
      "--input-focus-ring-color": "rgba(59, 130, 246, 0.5)",
      "--button-hover-transform": "translateY(-1px)"
    }
  },
  "build": {
    "target": "production",
    "minify": true,
    "sourceMaps": false,
    "outputDir": "./dist",
    "publicPath": "/"
  }
}