  "routes": [
    {
      "path": "/",
      "component": "homePage",
      "layout": "mainLayout",
      "middleware": ["logRequest"],
      "meta": {
        "title": "Home | Blog App",
        "description": "Welcome to our blog featuring articles about Fresh, Deno, and web development"
      }
    },
    {
      "path": "/posts/:id",
      "component": "postDetail",
      "layout": "mainLayout",
      "middleware": ["logRequest"],
      "meta": {
        "title": "Post | Blog App",
        "description": "Read our latest blog post"
      }
    },
    {
      "path": "/login",
      "component": "loginForm",
      "middleware": ["logRequest", "guestOnly"],
      "meta": {
        "title": "Login | Blog App",
        "description": "Sign in to your account"
      }
    },
    {
      "path": "/admin",
      "component": "adminDashboard",
      "layout": "adminLayout",
      "middleware": ["logRequest", "requireAuth"],
      "meta": {
        "title": "Admin Dashboard | Blog App",
        "description": "Blog administration dashboard",
        "requiresAuth": true
      }
    }
  ],
  "api": {
    "endpoints": [
      {
        "path": "/api/posts",
        "methods": ["GET", "POST"],
        "handler": "PostsHandler",
        "middleware": ["validateRequest"],
        "validation": {
          "body": {
            "title": {
              "type": "string",
              "required": true,
              "min": 5,
              "max": 100
            },
            "content": {
              "type": "string",
              "required": true,
              "min": 10
            },
            "categoryId": {
              "type": "string",
              "required": true,
              "pattern": "^[0-9a-fA-F]{24}$"
            },
            "tags": {
              "type": "array",
              "required": false
            }
          }
        },
        "auth": {
          "required": true,
          "roles": ["admin", "editor"]
        }
      },
      {
        "path": "/api/posts/:id",
        "methods": ["GET", "PUT", "DELETE"],
        "handler": "PostDetailHandler",
        "middleware": ["validateRequest"],
        "validation": {
          "params": {
            "id": {
              "type": "string",
              "required": true,
              "pattern": "^[0-9a-fA-F]{24}$"
            }
          }
        },
        "auth": {
          "required": true,
          "roles": ["admin", "editor"]
        }
      },
      {
        "path": "/api/categories",
        "methods": ["GET", "POST"],
        "handler": "CategoriesHandler",
        "middleware": ["validateRequest"],
        "validation": {
          "body": {
            "name": {
              "type": "string",
              "required": true,
              "min": 2,
              "max": 50
            },
            "description": {
              "type": "string",
              "required": false,
              "max": 200
            }
          }
        },
        "auth": {
          "required": true,
          "roles": ["admin"]
        }
      },
      {
        "path": "/api/comments",
        "methods": ["GET", "POST"],
        "handler": "CommentsHandler",
        "middleware": ["validateRequest"],
        "validation": {
          "body": {
            "postId": {
              "type": "string",
              "required": true,
              "pattern": "^[0-9a-fA-F]{24}$"
            },
            "name": {
              "type": "string",
              "required": true,
              "min": 2,
              "max": 50
            },
            "email": {
              "type": "string",
              "required": true,
