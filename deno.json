{
  "nodeModulesDir": "auto",
  "workspace": [
    "packages/ui-lib",
    "packages/docs",
    "packages/shared",
    "packages/api",
    "packages/auth-client",
    "packages/profile",
    "packages/admin",
    "packages/payments",
    "applications/recorder",
    "applications/paint",
    "applications/sorted-storage",
    "applications/ghostly-glide"
  ],
  "imports": {
    "daisyui": "npm:daisyui@^5.0.50",
    "@fresh/core": "jsr:@fresh/core@2.0.0-alpha.52",
    "@std/path": "jsr:@std/path@^1.1.1",
    "@std/dotenv": "jsr:@std/dotenv@^0.225.5",
    "@std/crypto": "jsr:@std/crypto@^1.0.5",
    "@std/encoding": "jsr:@std/encoding@^1.0.10",
    "@std/uuid": "jsr:@std/uuid@^1.0.9",
    "@std/fs": "jsr:@std/fs@^1.0.19",
    "@std/assert": "jsr:@std/assert@^1.0.13",
    "@std/http": "jsr:@std/http@^1.0.20",
    "@std/cli": "jsr:@std/cli@^1.0.21",
    "@std/testing": "jsr:@std/testing@^1.0.15",
    "fresh": "jsr:@fresh/core@2.0.0-alpha.52",
    "@fresh/plugin-tailwind-v3": "jsr:@fresh/plugin-tailwind-v3@^1.0.0",
    "$fresh/runtime": "jsr:@fresh/core@2.0.0-alpha.52/runtime",
    "tailwindcss": "npm:tailwindcss@3.4.17",
    "@supabase/supabase-js": "jsr:@supabase/supabase-js@2",
    "preact": "npm:preact@10.27.0",
    "preact/": "npm:preact@10.27.0/",
    "preact/hooks": "npm:preact@10.27.0/hooks",
    "preact/jsx-runtime": "npm:preact@10.27.0/jsx-runtime",
    "preact/jsx-dev-runtime": "npm:preact@10.27.0/jsx-dev-runtime",
    "preact-render-to-string": "npm:preact-render-to-string@6.5.11",
    "@preact/signals": "npm:@preact/signals@2.2.1",
    "@playwright/test": "npm:@playwright/test@1.54.1",
    "@preact/signals-core": "npm:@preact/signals-core@1.8.0",
    "zod": "npm:zod@3.25.1",
    "lucide-preact": "npm:lucide-preact@0.460.0"
  },
  "tasks": {
    "test": "deno test --allow-all",
    "test:watch": "deno test --allow-all --watch",
    "test:coverage": "deno test --allow-all --coverage=coverage",
    "lint": "deno lint",
    "fmt": "deno fmt",
    "fmt:check": "deno fmt --check",
    "cache": "deno cache packages/**/*.ts"
  },
  "fmt": {
    "options": {
      "indentWidth": 2,
      "lineWidth": 100,
      "semiColons": true
    },
    "include": [
      "packages/",
      "scripts/",
      "sites/"
    ],
    "exclude": [
      "ui-lib/"
    ]
  },
  "lint": {
    "rules": {
      "tags": [
        "recommended"
      ],
      "exclude": [
        "no-explicit-any",
        "no-unused-vars", 
        "jsx-button-has-type",
        "react-no-danger",
        "require-await",
        "fresh-server-event-handlers",
        "no-case-declarations"
      ]
    },
    "include": [
      "packages/",
      "scripts/"
    ],
    "exclude": [
      "ui-lib/"
    ]
  },
  "test": {
    "include": [
      "packages/*/test/",
      "packages/**/*.test.ts"
    ]
  },
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.asynciterable",
      "deno.ns"
    ],
    "jsx": "react-jsx",
    "jsxImportSource": "preact"
  },
  "unstable": [
    "kv",
    "cron"
  ]
}