{
  "name": "sortedstorage",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite dev",
    "dev:separate": "./run-dev.sh",
    "dev:integrated": "./run-dev-integrated.sh",
    "build": "vite build",
    "preview": "vite preview",
    "build:full": "./build.sh",
    "backend:dev": "cd backend && go run .",
    "backend:build": "cd backend && go build -o ../sortedstorage-server",
    "start:integrated": "./sortedstorage-server",
    "test": "vitest",
    "test:unit": "vitest run",
    "test:integration": "vitest run --config vitest.config.integration.ts",
    "test:e2e": "playwright test",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "eslint .",
    "lint:check": "eslint . --max-warnings=0",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "analyze": "ANALYZE=true npm run build",
    "docker:build": "docker build -t sortedstorage:latest .",
    "docker:run": "docker run -p 3000:3000 sortedstorage:latest",
    "deploy": "./scripts/deploy.sh",
    "backup": "./scripts/backup.sh backup",
    "health-check": "./scripts/health-check.sh"
  },
  "dependencies": {
    "@common/ui-components": "file:../common/ui-components",
    "axios": "^1.6.7",
    "chart.js": "^4.4.1",
    "date-fns": "^3.3.1",
    "lucide-svelte": "^0.456.0",
    "svelte-chartjs": "^3.1.5",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@playwright/test": "^1.41.2",
    "@sveltejs/adapter-auto": "^3.0.0",
    "@sveltejs/adapter-node": "^4.0.1",
    "@sveltejs/adapter-static": "^3.0.9",
    "@sveltejs/kit": "^2.0.0",
    "@sveltejs/vite-plugin-svelte": "^3.0.0",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/svelte": "^4.0.5",
    "@types/eslint": "^9.6.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.11.19",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitest/ui": "^1.1.0",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.7.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-svelte": "^2.36.0",
    "jsdom": "^23.0.1",
    "jsonwebtoken": "^9.0.2",
    "postcss": "^8.4.47",
    "prettier": "^3.2.5",
    "prettier-plugin-svelte": "^3.2.1",
    "prettier-plugin-tailwindcss": "^0.5.11",
    "rollup-plugin-visualizer": "^5.12.0",
    "svelte": "^4.2.7",
    "svelte-check": "^4.0.0",
    "tailwindcss": "^3.4.14",
    "typescript": "^5.0.0",
    "vite": "^5.0.3",
    "vite-plugin-compression": "^0.5.1",
    "vite-plugin-pwa": "^0.19.0",
    "vitest": "^1.1.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "browserslist": [
    "defaults",
    "not IE 11",
    "maintained node versions"
  ]
}
