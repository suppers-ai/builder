{
  "name": "@suppers/ui-lib",
  "version": "1.0.0",
  "exports": "./mod.ts",
  "tasks": {
    "test": "deno test --allow-all --no-check",
    "test:all": "deno test --allow-all --no-check",
    "test:watch": "deno test --allow-all --watch",
    "test:unit": "deno test --allow-all components/",
    "test:visual": "echo 'Visual tests require manual run: npx playwright test (Playwright/Deno env conflict)'",
    "test:e2e": "echo 'E2E tests require manual run: npx playwright test (Playwright/Deno env conflict)'",
    "test:component": "deno test --allow-all components/",
    "test:coverage": "deno test --allow-all --coverage=coverage components/",
    "test:coverage-report": "deno coverage coverage --html",
    "playwright:install": "deno run -A npm:playwright install",
    "playwright:test": "npx playwright test",
    "playwright:ui": "npx playwright test --ui",
    "playwright:report": "npx playwright show-report",
    "lint": "deno lint",
    "fmt": "deno fmt",
    "typecheck": "deno check **/*.ts **/*.tsx"
  },
  "compilerOptions": {
    "lib": ["dom", "dom.asynciterable", "deno.ns"],
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "strict": true
  },
  "exclude": ["**/_fresh/*", "**/node_modules/*", "./coverage/*"],
  "lint": { "rules": { "tags": ["fresh", "recommended"] } }
}
