{
  "name": "@suppers/api",
  "version": "1.0.0",
  "exports": {
    ".": "./mod.ts"
  },
  "imports": {
    "@supabase/supabase-js": "jsr:@supabase/supabase-js@2",
    "@supabase/functions-js": "jsr:@supabase/functions-js"
  },
  "tasks": {
    "serve": "npx supabase functions serve --no-verify-jwt",
    "dev": "npx supabase start -x vector ",
    "stop": "npx supabase stop",
    "reset": "npx supabase db reset",
    "deploy": "npx supabase functions deploy --no-verify-jwt",
    "deploy:api": "npx supabase functions deploy api",
    "deploy:oauth": "npx supabase functions deploy authorize && npx supabase functions deploy callback",
    "logs": "npx supabase functions logs api",
    "logs:authorize": "npx supabase functions logs authorize",
    "logs:callback": "npx supabase functions logs callback",
    "types": "npx supabase gen types typescript --local > ../shared/generated/database-types.ts"
  },
  "compilerOptions": {
    "lib": [
      "deno.ns",
      "dom"
    ],
    "strict": true
  }
}
