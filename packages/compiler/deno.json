{
  "name": "@suppers/compiler",
  "version": "1.0.0",
  "exports": "./mod.ts",
  "imports": {
    "@cliffy/command": "jsr:@cliffy/command@^1.0.0-rc.8",
    "@cliffy/prompt": "jsr:@cliffy/prompt@^1.0.0-rc.8",
    "@suppers/shared": "../shared/mod.ts"
  },
  "tasks": {
    "dev": "deno run --allow-all --watch cli.ts",
    "build": "deno compile --allow-all --output=./bin/builder cli.ts",
    "test": "deno test --allow-all",
    "lint": "deno lint",
    "fmt": "deno fmt",
    "check": "deno check **/*.ts"
  },
  "compilerOptions": {
    "lib": ["deno.ns", "dom", "dom.asynciterable"],
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "strict": true
  },
  "fmt": {
    "options": { "indentWidth": 2, "lineWidth": 100, "semiColons": true }
  },
  "lint": {
    "rules": { "tags": ["recommended"] }
  }
}
