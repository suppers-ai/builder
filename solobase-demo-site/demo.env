# Demo Environment Configuration for Solobase
# Optimized for containerized demo with security constraints

# Server Configuration
PORT=8080
ENVIRONMENT=demo

# Database Configuration - SQLite for demo isolation
DATABASE_TYPE=sqlite
DATABASE_URL=file:./data/demo.db?cache=shared&mode=rwc

# Storage Configuration - Local storage for demo
STORAGE_TYPE=local
LOCAL_STORAGE_PATH=./storage

# Demo-specific Admin Account
DEFAULT_ADMIN_EMAIL=demo@solobase.dev
DEFAULT_ADMIN_PASSWORD=demo123!

# Authentication Settings
ENABLE_SIGNUP=false
ENABLE_API=true
JWT_SECRET=demo-jwt-secret-not-for-production
SESSION_SECRET=demo-session-secret-not-for-production

# Security Settings for Demo
CORS_ALLOWED_ORIGINS=*
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS,PATCH
CORS_ALLOWED_HEADERS=Content-Type,Authorization

# Rate Limiting - Stricter for demo environment
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=30

# Logging
LOG_LEVEL=INFO

# Demo-specific Features
DEMO_MODE=true
DEMO_SESSION_TIMEOUT=1800
DEMO_AUTO_CLEANUP=true

# Disable external services for demo
SMTP_HOST=
SMTP_PORT=
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM=demo@solobase.dev
SMTP_USE_TLS=false

# Resource Constraints
MAX_UPLOAD_SIZE=10MB
MAX_STORAGE_SIZE=100MB
MAX_DATABASE_SIZE=50MB

# Demo Data Configuration
SEED_DEMO_DATA=true
DEMO_DATA_RESET_INTERVAL=3600

# Security Headers
SECURITY_HEADERS_ENABLED=true
CONTENT_SECURITY_POLICY=default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'