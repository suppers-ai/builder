{
  "name": "@suppers-ai/recorder",
  "version": "1.0.0",
  "exports": "./main.ts",
  "tasks": {
    "dev": "deno run --allow-all --watch=static/,routes/,islands/,components/,lib/ dev.ts",
    "build": "deno run --allow-all dev.ts build",
    "start": "deno run --allow-all main.ts",
    "preview": "deno run --allow-all main.ts",
    "update": "deno run --allow-all -r https://fresh.deno.dev/update .",
    "test": "deno test --allow-all --run",
    "test:watch": "deno test --allow-all --watch",
    "test:coverage": "deno test --allow-all --coverage=coverage",
    "check": "deno check **/*.ts",
    "fmt": "deno fmt",
    "fmt:check": "deno fmt --check",
    "lint": "deno lint"
  },
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "preact"
  },
  "imports": {
    "@/": "./",
    "@suppers-ai/ui-lib": "../../packages/ui-lib/mod.ts",
    "@suppers-ai/auth-client": "../../packages/auth-client/mod.ts",
    "@suppers-ai/shared": "../../packages/shared/mod.ts"
  },
  "lint": {
    "rules": {
      "tags": ["fresh", "recommended"]
    }
  },
  "exclude": ["**/_fresh/*"]
}